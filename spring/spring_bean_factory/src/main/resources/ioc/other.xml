<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="exampleBean" class="ioc.ExampleBean">
        <constructor-arg type="int" value="7500000"/>
        <constructor-arg type="java.lang.String" value="42a"/>
    </bean>

    <bean id="exampleBean2" class="ioc.ExampleBean">
        <constructor-arg index="0" value="7500000a"/>
        <constructor-arg index="1" value="423a"/>
    </bean>

    <bean id="exampleBean3" class="ioc.ExampleBean">
        <constructor-arg value="7500000"/>
        <constructor-arg value="4234a"/>
    </bean>

</beans>